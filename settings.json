{
    "$schema": "https://aka.ms/terminal-profiles-schema",
    "defaultProfile": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
    "copyOnSelect": true,
    "copyFormatting": false,

    // Shell-Profile
    "profiles":
    {
        "defaults":
        {
            // Profiluebergreifende Einstellungen
            "scrollbarState": "visible",
            "snapOnInput": true,
            "closeOnExit": "graceful",
            "antialiasingMode": "cleartype",
            "useAcrylic": true,
            "backgroundImageOpacity": 0.3,
            "acrylicOpacity": 0.7
        },
        "list":
        [
            {
                // PowerShell
                "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
                "name": "PowerShell",
                "commandline": "powershell.exe",
                "hidden": false,
                "colorScheme": "Banana Blueberry",
                "icon": "C:\\Users\\Public\\Pictures\\SupporterTerminal\\icons\\Icon_Powershell.ico",
                "backgroundImage": "C:\\Users\\Public\\Pictures\\SupporterTerminal\\wallpaper\\furthermadness.jpg"
            },
            {
                // SSH Session
                "name": "SSH Verbindung",
                "tabTitle": "SSH",
                "hidden": false,
                "commandline": "powershell.exe -Command & \"C:\\Users\\Public\\WT_Scripts\\wt-session_ssh.ps1\"",
                "icon": "C:\\Users\\Public\\Pictures\\SupporterTerminal\\icons\\Icon_SSH.ico",
                "backgroundImage": "C:\\Users\\Public\\Pictures\\SupporterTerminal\\wallpaper\\madness.jpg",
                "colorScheme": "Blue Matrix"
            },
            {
                // Telnet Session
                "hidden": false,
                "name": "Telnet Verbindung",
                "tabTitle": "Telnet",
                "commandline": "powershell.exe -Command & \"C:\\Users\\Public\\WT_Scripts\\wt-session_telnet.ps1\"",
                "icon": "C:\\Users\\Public\\Pictures\\SupporterTerminal\\icons\\Icon_Telnet.ico",
                "backgroundImage": "C:\\Users\\Public\\Pictures\\SupporterTerminal\\wallpaper\\morethanthreeofthis.jpg",
                "colorScheme": "Ollie"
            },
            {
                // Serial Session
                "hidden": false,
                "name": "Serial Verbindung",
                "tabTitle": "Serial",
                "commandline": "powershell.exe -Command & \"C:\\Users\\Public\\WT_Scripts\\wt-session_serial.ps1\"",
                "icon": "C:\\Users\\Public\\Pictures\\SupporterTerminal\\icons\\Icon_Serial.ico",
                "backgroundImage": "C:\\Users\\Public\\Pictures\\SupporterTerminal\\wallpaper\\nebula.jpg",
                "colorScheme": "MonaLisa"
            },
            {
                // Azure Cloud Shell
                "guid": "{b453ae62-4e3d-5e58-b989-0a998ec441b8}",
                "hidden": true,
                "name": "Azure Cloud Shell",
                "source": "Windows.Terminal.Azure",
                "colorScheme": "Solarized Dark"
            },
            {
                // CMD
                "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
                "name": "Eingabeaufforderung",
                "commandline": "cmd.exe",
                "hidden": true
            }
        ]
    },

